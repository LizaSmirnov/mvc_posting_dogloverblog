<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

{{#if posts.length}}
<div class="row">
  <div class="col-auto">
    <h3>Your Posts:</h3>
  </div>
</div>

{{#each posts as |post|}}
<section class="card">
  <div class="card-body">
    <h4 class="card-title">{{post.title}}</h4>
    <p class="card-text">{{post.body}}</p>
    <a href="/post/{{post.id}}" class="btn btn-primary">View Post</a>
  </div>
</section>
{{/each}}
{{/if}}

<section  class="card text-center">
  <div class="card-body">
    <h3 class="card-title">Create a New Post:</h3>
    <form class="form new-post-form" id="newPostForm">
      <div class="form-group">
        <label for="post-title">Post title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-body">Tell us about Tech:</label>
        <textarea class="form-input" id="post-body" name="post-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="createBtn">Create</button>
      </div>
    </form>
  </div>
</section>


  
<script src="/js/profile.js"></script>