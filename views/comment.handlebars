<section class="card text-center">
  <input type="hidden" name="post-id" value="{{id}}"/>
   <input type="hidden" name="user-name" value="{{user.name}}"/>
  <div class="card-body">
    <h3 class="card-title">Post Title: {{title}}</h3>
    <p class="card-text">Post Body: {{body}}</p>
    <h3 class="card-title">Post a Comment:</h3>
    <form class="form new-comment-form" id="newCommentForm">
      <div class="form-group">
        <textarea class="form-input" id="comment-body" name="comment-body" post-id="{{id}}"></textarea>
      </div>
      <div class="form-group">
        <button type="click" class="btn btn-primary" id="createBtn">Create</button>
      </div>
    </form>
  </div>
</section>

<script src="/js/comment.js"></script>