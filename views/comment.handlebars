<section  class="card text-center">
  <input type="hidden" name="post-id" value="{{post.id}}"/>
  <div class="card-body">
    <h3 class="card-title">Post a Comment:</h3>
    <form class="form new-comment-form" id="newCommentForm">
      <div class="form-group">
        <textarea class="form-input" id="comment-body" name="comment-body" post-id="{{post.id}}"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="createBtn">Create</button>
      </div>
    </form>
  </div>
</section>

<script src="/js/comment.js"></script>
